<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.c309660.cn_tema6.MainActivity">

    <TextView
        android:text="Tema 6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/appSubtitle"
        android:layout_below="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="30dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="n = "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/pValue"
        android:layout_toLeftOf="@+id/nValue"
        android:layout_toStartOf="@+id/nValue"
        android:textSize="30dp" />

    <EditText
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/nValue"
        android:background="@android:color/background_light"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textSize="22dp"
        android:layout_width="70dp" />

    <EditText
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/pValue"
        android:background="@android:color/background_light"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_alignTop="@+id/textView6"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:textSize="22dp"
        android:layout_width="70dp" />

    <TextView
        android:text="Calcul numeric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:id="@+id/appTitle"
        android:textStyle="normal|bold"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="p ="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="61dp"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:layout_below="@+id/appSubtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Start"
        android:id="@+id/button"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:onClick="startProgram"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/appSubtitle"
        android:layout_alignStart="@+id/appSubtitle" />


</RelativeLayout>
